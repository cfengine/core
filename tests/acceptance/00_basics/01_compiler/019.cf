######################################################
#
#  Issue 375 setup (precursor to actual tickle of bug)
#
#####################################################
body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

#######################################################

bundle agent init
{
  methods:
      "1" usebundle => dcs_tidy($(G.testfile));
}

#######################################################

bundle agent test
{
  files:
      "$(G.testfile)"
      create => "true",
      action => test_action;
}

body action test_action
{
      action_policy => "warn";
}

#######################################################


bundle agent check
{
  methods:
      "" usebundle => dcs_passif_filenotexists($(G.testfile),
                                               $(this.promise_filename));
}
