body file control
{
  inputs => { "$(sys.policy_entry_dirname)/../common.cf.sub" };
}

bundle common testcase
{
  vars:
    "filename" string => "$(this.promise_filename)";
}

bundle agent setup
{
  files:
    "$(G.testfile)"
      create => "true",
      edit_line => insert_lines("
zebra
apple
dog
cat
banana
");
}

bundle agent main
{
  files:
    "$(G.testfile)"
      transformer => "$(G.gzip) $(G.testfile)";
}
