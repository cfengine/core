##############################################################################
#
# Redmine #4241: set correct classes if template is missing
#
##############################################################################

body common control
{
  inputs => { "../../default.cf.sub" };
  bundlesequence => { default("$(this.promise_filename)") };
  version => "1.0";
}

#######################################################

bundle agent init
{

}

#######################################################

bundle agent test
{
  files:
      "$(G.testfile)"
      create => "true",
      edit_template => "$(this.promise_filename).nonexistant",
      classes => default_cf_sub_scoped_generic_classes("test_file_template", "namespace");

  methods:
    DEBUG::
      "report" usebundle => default_cf_sub_report_generic_classes("test_file_template");
}

#######################################################

bundle agent check
{
  classes:
      "created" expression => fileexists($(G.testfile));

      "ok" and => { "!created",
                    "!test_file_template_kept",
                    "!test_file_template_repaired",
                    "test_file_template_failed",
                    "!test_file_template_denied",
                    "!test_file_template_timeout" };

  reports:
    DEBUG.created::
      "Erroneously created the test file $(G.testfile)";
    DEBUG.!created::
      "Correctly did not create the test file $(G.testfile)";
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}
