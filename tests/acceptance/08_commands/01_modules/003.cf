#######################################################
#
# Test command modules
#
#######################################################

body common control
{
  inputs => { "../../default.cf.sub" };
  bundlesequence  => { default("$(this.promise_filename)") };
  version => "1.0";
nova_edition::
  host_licenses_paid => "5";
}

#######################################################

bundle agent init
{
vars:
  "script_name" string => "$(this.promise_filename).script";
}

#######################################################

bundle agent test
{
classes:
  "matched" expression => regextract(".+/([^/]+)$",
                                     "${init.script_name}",
                                     "script_basename");

commands:
  "$(init.script_name)" module => "true";
}

#######################################################

bundle agent check
{
vars:
  "canonical_script_basename" string => canonify("${test.script_basename[1]}");

classes:

  any::
    "ok" expression => strcmp("${${canonical_script_basename}.percent}", "42%");

reports:
    DEBUG::
        "${${canonical_script_basename}.percent} =?= 42%";
    ok::
        "$(this.promise_filename) Pass";
    !ok::
        "$(this.promise_filename) FAIL";
}

