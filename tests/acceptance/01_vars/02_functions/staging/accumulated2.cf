#######################################################
#
# Test accumulated()
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

#######################################################

bundle agent init
{
  vars:
      "dummy" string => "dummy";
}

#######################################################

bundle agent test
{
  vars:
      "time" int => accumulated(0,1000,1000,1000,1000,40000);
}

#######################################################

bundle agent check
{
  vars:
      "time" int => "2682100000";        # 1 year == 365 days

  classes:
      "ok" expression => strcmp("$(time)", "$(test.time)");

  reports:
    DEBUG::
      "time: $(time)";
      "test.time: $(test.time)";
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}

