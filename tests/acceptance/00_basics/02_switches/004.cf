#######################################################
#
# This is a special test - it exercises runtime switches
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { test };
      version => "1.0";
}

#######################################################

bundle agent test
{
  vars:
      "cmd" string =>
      "$(sys.cf_agent) -Kf $(this.promise_filename).sub -D AUTO,ok.";

  commands:
      "$(cmd)";

  reports:
    DEBUG::
      "Running: $(cmd)";
      "Test results come from $(this.promise_filename).sub";
}

