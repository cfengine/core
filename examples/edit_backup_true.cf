###############################################################################
#+begin_src cfengine3
body edit_defaults backup( edit_backup )
{
        edit_backup => "$(edit_backup)";
}

bundle agent main
{
  files:
      "/tmp/example_edit_backup_timestamp"
        create => "true";

      "/tmp/example_edit_backup_timestamp"
        edit_line => insert_lines("Hello World. It's $(sys.date)"),
        edit_defaults => backup("true");

  vars:
      "example_files" slist => sort( lsdir( "/tmp/", "example_edit_backup_timestamp.*", false), lex);

  reports:
      "$(example_files)";
}
#+end_src
