      # Use for redirection, not as a real file.
      "dev_null" string => "/dev/null";
      "exeext" string => "";

    any::
      # General commands.
      "cmds" slist => { "date",
                        "dd",
                        "diff",
                        "cat",
                        "colordiff",
                        "cp",
                        "echo",
                        "egrep",
                        "env",
                        "false",
                        "grep",
                        "gzip",
