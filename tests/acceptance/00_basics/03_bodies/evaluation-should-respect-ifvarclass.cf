##############################################################################
#
# Redmine #3577: evaluation should respect ifvarclass
#
##############################################################################

body common control
{
  inputs => { "../../default.cf.sub" };
  bundlesequence => { default("$(this.promise_filename)") };
  version => "1.0";
}

bundle agent init
{

}


bundle agent test
{
vars:
  "subout" string => execresult("$(sys.cf_agent) -v -f $(this.promise_filename).sub", "noshell");
}


bundle agent check
{
# If the output contains the string, we fail
classes:
  "ok1" not => regcmp(".*IMMANUEL_KANT.*", "$(test.subout)");
  "ok2" not => regcmp(".*BUT_KUBLAI_KHAN.*", "$(test.subout)");
  "ok" and => { "ok1", "ok2" };

reports:
  DEBUG::
    "$(test.subout)";

  ok::
    "$(this.promise_filename) Pass";
  !ok::
    "$(this.promise_filename) FAIL";
}
