#######################################################
#
# Test that body agent control dryrun restricts mustache
# template rendering
# Ref: https://dev.cfengine.com/issues/6739
#
#######################################################

body common control
{
      inputs => { "../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

bundle agent init
{
  vars:
    "template_target" string => "$(G.testfile)";

  files:
      "$(template_target)"
        delete => tidy;

      "$(template_target)"
        create => "true";
}

#######################################################

bundle agent check
{
  meta:
    "test_soft_fail"
      string => "any",
      meta => { "redmine#6739" };

  vars:
    "command" string => "$(sys.cf_agent) -KIf $(this.promise_filename).sub -DAUTO";

  methods:
    "check"
      usebundle => dcs_passif_output(".*Pass.*", ".*FAIL.*", $(command), $(this.promise_filename));
}
