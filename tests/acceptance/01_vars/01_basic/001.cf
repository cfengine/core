#######################################################
#
# Test simple variables
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

#######################################################

bundle agent init
{
  vars:
      "dummy" string => "dummy";
}

#######################################################

bundle agent test
{
  vars:
      "ten" int => "10";
      "ten[ten]" int => "11";
      "nine" string => "hello",
      policy => "free";
      "nine" int => "9",
      policy => "free";
}

#######################################################

bundle agent check
{
  classes:
      "ok_10" not => strcmp("$(test.ten)", "$(test.ten[ten])");
      "ok" and => { "ok_10", strcmp("$(test.nine)", "9") };

  reports:
    DEBUG::
      "ten == $(test.ten)";
      "ten[ten] == $(test.ten[ten])";
      "nine == $(test.nine)";
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}

