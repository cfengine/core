#######################################################
#
# Test simple real variable failures
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

#######################################################

bundle agent init
{
}

#######################################################

bundle agent test
{
  vars:
      # Exponent too big, parser should reject and cf-promises should bail
      "zero_p" real => "0e2345678";
      # Exponent too big, parser should reject and cf-promises should bail
      "zero_n" real => "0e-2345678";
}

#######################################################

bundle agent check
{
  reports:
    DEBUG::
      "zero_p == $(test.zero_p)";
      "zero_n == $(test.zero_n)";

    any::
      # this policy should never be evaluated by cf-agent,
      # parser should reject and cf-promises should bail.
      # FAIL by default just in-case.
      "$(this.promise_filename) FAIL";
}

