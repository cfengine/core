#+begin_src cfengine3
body common control
{
      bundlesequence => { run };
}

bundle agent run
{
  vars:
      "all" slist => variablesmatching(".*");
      "v" slist => variablesmatching("default:sys.cf_version.*");
  reports:
      "Variables matching 'default:sys.cf_version.*' = $(v)";
}

#+end_src
