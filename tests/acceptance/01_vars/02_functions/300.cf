#######################################################
#
# Test multiline regcmp
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

#######################################################

bundle agent init
{
  vars:
      "dummy" string => "dummy";
}

#######################################################

bundle agent test
{
  vars:
      "haystack" string => "foo
bar";
      "needle" string => ".*";
}

#######################################################

bundle agent check
{
  classes:
      "ok" and => { regcmp("$(test.needle)", "$(test.haystack)") };

  reports:
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}

