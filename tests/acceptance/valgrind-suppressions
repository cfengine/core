   lex-internal
   Memcheck:Leak
   ...
   fun:yylex
}

################################################
# libc weirdness
################################################

{
   # This can probably be fixed by giving it a static buffer
   gethostbyaddr-cannot-decide-on-const
   Memcheck:Leak
   ...
   fun:gethostbyaddr
   ...
}

{
   msgsnd_nocancel-param
   Memcheck:Param
   msgsnd(msgp->mtext)
   fun:__msgsnd_nocancel
   fun:send_fakem
   ...
}

