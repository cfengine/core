##############################################################################
#
# Redmine #3576: cf-promises should not run agent bundles
# NOTE: changed to if --eval-functions=no
#
##############################################################################

body common control
{
  inputs => { "../../default.cf.sub" };
  bundlesequence => { default("$(this.promise_filename)") };
  version => "1.0";
}

bundle agent test
{
  methods:
      "" usebundle => dcs_passif_output(".*", # wanted
                                        ".*PURPLE_DINOSAUR.*", # unwanted
                                        "$(sys.cf_promises) --eval-functions=no -v -f $(this.promise_filename).sub | $(G.grep) PURPLE",
                                        $(this.promise_filename)),
      inherit => "true";
}
