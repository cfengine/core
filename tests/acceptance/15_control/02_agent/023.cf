#######################################################
#
# Test abortbundleclasses - control case 3, no abort
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

body agent control {
      abortbundleclasses => { "quit" };
}

bundle common g
{
  vars:
      "dummy" string => "dummy";

  classes:
      "quitquit" expression => "any";        # Validate no submatch, reverse
}

#######################################################

bundle agent init
{
  vars:
      "dummy" string => "dummy";
}

#######################################################

bundle agent test
{
  vars:
      "dummy" string => "dummy";
}

#######################################################

bundle agent check
{
  vars:
      "dummy" string => "dummy";

  classes:
      "ok" expression => "any";

  reports:
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}

