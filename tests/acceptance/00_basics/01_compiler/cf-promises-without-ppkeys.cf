# Test that cf-promises doesn't fail if ppkeys are missing

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

bundle agent init
{
  methods:
      "clear ppkeys" usebundle => dcs_fini("$(sys.workdir)/ppkeys");
}

bundle agent test
{
  commands:
      "$(sys.cf_promises) -f $(this.promise_filename)"
      classes => scoped_classes_generic("namespace", "validated");
}

bundle agent check
{
  methods:
      "" usebundle => dcs_passif_expected("validated_ok",
                                          "validated_not_ok", # not expected
                                          $(this.promise_filename)),
      inherit => "true";
}
