######################################################
#
#  Issue 375
#
#####################################################
body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

#######################################################

bundle agent init
{
  methods:
      "1" usebundle => dcs_tidy($(G.testfile));
}

#######################################################

bundle agent test
{
  files:
      "$(G.testfile)"
      create => "banana";
}

#######################################################

bundle agent check
{
  methods:
      "" usebundle => dcs_passif_file_absent($(G.testfile),
                                               $(this.promise_filename));
  reports:
    DEBUG::
      "This test should fail";
}
