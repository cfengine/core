body common control
{
  bundlesequence => { "check" };
  version => "1.2.3";
}

bundle agent check
{
  classes:
    "ok"
      expression => and(
        strcmp("$(sys.policy_version)", "$(default:control_common.version)"),
        strcmp("$(sys.policy_version)", "1.2.3")
      );
  reports:
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}
