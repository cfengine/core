# Test that log_failed and log_kept set to the same value do not cause stack overflow (Redmine #2317)

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

bundle agent init
{
  methods:
      "2" usebundle => dcs_emptyfile("$(G.testfile).src");
      "2" usebundle => dcs_emptyfile("$(G.testfile).dest");
}

bundle agent test
{
  files:
      "$(G.testfile).dest"
      link_from => test_hard("$(G.testfile).src"),
      action => test_log;
}

body action test_log
{
      log_failed => "$(G.testfile).action.log";
      log_kept => "$(G.testfile).action.log";
      log_string => "";
}

body link_from test_hard(from)
{
      source => "$(from)";
      link_type => "hardlink";
}

bundle agent check
{
  methods:
      "" usebundle => dcs_pass($(this.promise_filename));
}
