#######################################################
#
# Test mapdata('json_pipe')
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

#######################################################

bundle agent test
{
  vars:
      "items" data => '{"user":"stedolan","titles":["JQ Primer", "More JQ"]}';
      "items_passthrough" data => mapdata("json_pipe", "$(G.cat)", items);
      "items_jqinput" data => mapdata("json_pipe", "$(G.cat) $(this.promise_filename).jqinput.json", items);
      "items_input" data => mapdata("json_pipe", "$(G.cat) $(this.promise_filename).input.json", items);
}

#######################################################

bundle agent check
{
  methods:
      "check"  usebundle => dcs_check_state(test,
                                           "$(this.promise_filename).expected.json",
                                           $(this.promise_filename));
}
