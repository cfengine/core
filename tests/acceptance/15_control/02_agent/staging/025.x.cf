#######################################################
#
# Test abortbundleclasses - expect failure, report doesn't execute
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

body agent control {
      abortbundleclasses => { "quitquit" };
}

bundle common g
{
  vars:
      "dummy" string => "dummy";

  classes:
      "ok" expression => "any";        # Globally set, but should still fail
}

#######################################################

bundle agent init
{
  vars:
      "dummy" string => "dummy";
}

#######################################################

bundle agent test
{
  vars:
      "dummy" string => "dummy";
}

#######################################################

bundle agent check
{
  vars:
      "dummy" string => "dummy";

  classes:
      "quitquit" expression => "any";        # Prevent reports from running

  reports:
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}

