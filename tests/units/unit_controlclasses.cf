body common control
{
myclass1::

    bundlesequence  => { @(categories.common), "extra1" };
    inputs          => { @(categories.in1), @(categories.in_any) };
 
myclass2::

    bundlesequence  => { @(categories.common), "extra2" };
    inputs          => { @(categories.in1), @(categories.in_any) };
 
}

bundle common categories
{
classes:

   "myclass1" expression => "xxany"; 
   "myclass2" expression => "xxany"; 

vars:
          
  "common" slist => {
                    "update.cf",
                    }

  "extra1" slist => { 
                    "reasons to be cheerful, part 1",
                    };

  "extra2" slist => { 
                    "reasons to be cheerful, part 2",
                    };
 
  "in_any" slist => { 
                    "update.cf",
                    };

  "in1"    slist => { 
                    "in1/in1.cf",
                    };

  "in1"    slist => { 
                    "in2/in1.cf",
                    };
 }


