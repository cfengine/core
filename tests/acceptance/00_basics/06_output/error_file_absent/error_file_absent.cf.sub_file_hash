body common control
{
      inputs => { "../../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

#######################################################

bundle agent init
{
  vars:
      "absent_file" string => "$(G.testfile).absent_file";

  files: 
      "$(absent_file)"
        delete => tidy,
        comment => "Ensure we are testing against an absent file";
}

bundle agent test
{
  vars:

    "data" string => file_hash( $(absent_file), "md5");

  reports:
    DEBUG::
      "Testing for error from file_hash when attempting to read absent file";
}
