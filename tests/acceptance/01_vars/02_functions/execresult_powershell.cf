#######################################################

bundle agent check
{
vars:
  windows::
    "cwd" string => execresult("Get-Content $(G.cwd)\text.txt", "powershell");

classes:

  "ok" expression => strcmp("Succeeded", "$(cwd)");

reports:
    !windows|ok::
	"$(this.promise_filename) Pass";

    windows.!ok::
	"$(this.promise_filename) FAIL";
}

