######################################################
#
#  Issue 375
#
#####################################################
body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

#######################################################

bundle agent init
{
  methods:
      "1" usebundle => dcs_tidy($(G.testfile));
}

#######################################################

bundle agent test
{
  files:
      "$(G.testfile)"
      move_obstructions => "true",
      link_from => test_link;
}

body link_from test_link
{
      source => "$(G.etc_motd)";
      link_type => "banana";
}

#######################################################

bundle agent check
{
  methods:
      "" usebundle => dcs_passif_filenotexists($(G.testfile),
                                               $(this.promise_filename));
  reports:
    DEBUG::
      "This test should fail";
}
