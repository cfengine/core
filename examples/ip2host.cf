#+begin_src cfengine3
body common control
{
      bundlesequence => { "reverse_lookup" };
}

bundle agent reverse_lookup
{
  vars:
      "local4" string => ip2host("127.0.0.1");
      "local6" string => ip2host("::1");


  reports:
      "local4 is $(local4)";
      "local6 is $(local6)";
}
#+end_src
###############################################################################
